<div class="row">
    <div class="col-md-12">
        <br>
        <h2>Courses <a href="/addCourse" class="btn btn-success float-right">Add New Course</a></h2>
        <hr />
        {{#if data}}
        <table class="table table-responsive">
            <thead>
                <tr>
                    <th>Course Code</th>
                    <th>Course Description</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr>
                    <td><a href="/course/{{courseId}}">{{courseCode}}</a></td>
                    <td><a href="/students?course={{courseId}}">{{courseDescription}}</a></td>
                    <td><a class="btn btn-danger" href="/course/delete/{{courseId}}">Remove</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{/if}}
    </div>
    {{#unless data}}
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>
    {{/unless}}
</div>
