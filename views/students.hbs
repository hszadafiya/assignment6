<div class="row">
    <div class="col-md-12">
        <br>
        <h2>Students <a href="/addStudent" class="btn btn-success float-right">Add New Student</a></h2>
        <hr />
        {{#if data}}
        <table class="table table-responsive">
            <thead>
                <tr>
                    <th>Student ID</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Status</th>
                    <th>Course</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr>
                    <td>{{studentNum}}</td>
                    <td><a href="/students/{{studentNum}}">{{firstName}} {{lastName}}</a></td>
                    <td><a href="mailto:{{email}}">{{email}}</a></td>
                    <td>{{addressStreet}}, {{addressCity}}, {{addressProvince}}</td>
                    <td>{{status}}</td>
                    <td><a href="/students?course={{course}}">{{course}}</a></td>
                    <td><a class="btn btn-danger" href="/student/delete/{{studentNum}}">Remove</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{/if}}
    </div>
    {{#unless data}}
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>
    {{/unless}}
</div>
